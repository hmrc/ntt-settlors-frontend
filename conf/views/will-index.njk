{% extends "includes/layout.njk" %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("index.will.title")) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("index.will.heading") }}
        </h1>
        <form action="{{routes.controllers.willtrust.IndexController.onSubmit.url}}" method="post">

                {{ csrf() | safe }}

                    {{ govukButton({
                        text: messages("toRemove.startWillTrust")
                        }) }}
                </form>

      </div>
    </div>
  </div>

{% endblock %}
